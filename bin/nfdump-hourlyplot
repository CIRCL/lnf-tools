use strict;
use nfdump;
use hourlyplots;
use Data::Dumper;
use Getopt::Long;


sub usage
{
    my $code = shift;
    print <<END;
nfdump-hourlyplots -s <ip address> -p <port> -g <file.plot> -d <file.dat>
                   -i <image_file.png>

Use a nfdump output as input (long format) and create a plot of exchanged
data according hourly bins for a given host and a given port.

OPTIONS

    -h Displays this screen
    -s Specify the IP address
    -p Specify the port
    -g Sepecify the gnuplot file (generated by this script)
    -d Specify the gnuplot data file (generated by this script)
    -i Specify the PNG image that should be generated by gnuplot
       Note: Gnuplot is not triggered by this process. Only the
       plot file is generated.

AUTHOR
    Gerard Wagener

LICENSE
    GPL

END

exit($code);

}

my $isHelp = undef;
my $source=undef;
my $port = undef;
my $plotfile=undef;
my $datafile=undef;
my $imagefile=undef;
my $result = GetOptions ("source=s"=>\$source, "port=i"=>\$port,
                         "gnuplotfile=s"=>\$plotfile,
                         "datafile=s"=>\$datafile,
                         "imagefile=s"=>\$imagefile) or usage(1);


if (!defined($source) or !defined($plotfile) or !defined($datafile) or
    !defined($port) or !defined($imagefile)){
    &usage(1);
}

my $handler = hourlyplots->new($source, $port, $plotfile, $datafile, $imagefile);
my $parser=nfdump->new($handler);
$parser->parse();
$handler->generate_data_file;
$handler->generate_plot_file;
exit(0);
