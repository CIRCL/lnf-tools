use strict;
use nfdump;
use Data::Dumper;
use nfdumptuples;
use Getopt::Long;


sub usage
{
    my $code = shift;
    print <<END;
nfdump-tuples [-h]

Use a nfdump output as input (long format) and display the tuples
<source IP, destination IP>

OPTIONS

    -h Displays this screen

EXAMPLE

    nfdump -o extended6 -r nfcapd.201203030002 | nfdump-tuples

AUTHOR
    Gerard Wagener

LICENSE
    GPLv3

END

exit($code);

}

my $isHelp = undef;
my $source=undef;
my $result = GetOptions ("help"=>\$isHelp) or &usage(1);

if (defined($isHelp)){
    &usage(1);
}

my $handler = nfdumptuples->new($source);
my $parser=nfdump->new($handler);
$parser->parse();
exit(1);
